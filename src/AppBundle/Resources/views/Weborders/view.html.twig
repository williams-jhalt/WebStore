<div class="row">
    
    <span class="col-sm-6">

        <dl class="dl-horizontal">

            <dt>Order Number</dt>
            <dd>{{ weborder.orderNumber }}</dd>

            <dt>Customer Number</dt>
            <dd>{{ weborder.customerNumber }}</dd>

            <dt>Reference / PO#</dt>
            <dd>{{ weborder.reference1 }}</dd>

            <dt>Reference 2</dt>
            <dd>{{ weborder.reference2 }}</dd>

            <dt>Reference 3</dt>
            <dd>{{ weborder.reference3 }}</dd>

            <dt>Shipping Address</dt>
            <dd>
                <address>
                    {{ weborder.shipToCompany }}<br>
                    {{ weborder.shipToAttention }}<br>          
                    {{ weborder.shipToFirstName }} {{ weborder.shipToLastName }}<br>
                    {{ weborder.shipToAddress1 }}<br>
                    {% if weborder.shipToAddress2 %}{{ weborder.shipToAddress2 }}<br>{% endif %}
                    {{ weborder.shipToCity }}, {{ weborder.shipToState }} {{ weborder.shipToZip }}<br>
                    {{ weborder.shipToCountry }}
                </address>
            </dd>

        </dl>
                
    </span>
                
    <span class="col-sm-6">
        {% if shipment is not empty %}
            <div>This order has been sent to the warehouse</div>
        {% endif %}
        {% if packages is not empty %}
            <div>This order has been shipped</div>
        {% endif %}
        {% if invoice is not empty %}
            <div>This order has been invoiced</div>
        {% endif %}
    </span>
</div>
    
{% if packages is not empty %}
    <h2>Packages</h2>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Tracking Number</th>
                <th>Package Charge</th>
            </tr>
        </thead>
        <tbody>
            {% for package in packages %}
                <tr>
                    <td>{{ package.trackingNumber }}</td>
                    <td class="text-right">${{ package.packageCharge|number_format(2) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}

<h2>Audit</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Description</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        {% for audit in audits %}
            <tr>
                <td>{{ audit.comment }}</td>
                <td>{{ audit.timestamp|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Items</h2>
        
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Quantity Ordered</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.sku }}</td>
                <td class="text-right">{{ item.quantity }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
